   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="800dp"
       >

       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent"

           >

           <RelativeLayout
               android:background="#616161"
               android:layout_width="match_parent"
               android:layout_height="444dp"
               >


               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="180dp"
                   android:background="#C92519">

                   <TextView
                       android:text="电商项目"
                       android:layout_margin="15dp"
                       android:textColor="#ffffff"
                       android:textStyle="bold"
                       android:textSize="20dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       >
                   </TextView>

                   <ImageView
                       android:id="@+id/mess"
                       android:layout_marginTop="15dp"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="30dp"
                       android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:src="@drawable/message"
                       >
                   </ImageView>

                   <ImageView
                       android:src="@drawable/saoma"
                       android:id="@+id/sao"
                       android:layout_toLeftOf="@id/mess"
                       android:layout_marginTop="15dp"
                       android:layout_marginRight="10dp"
                       android:layout_width="25dp"
                       android:layout_height="25dp"
                       >
                   </ImageView>

                   <EditText
                       android:drawableStart="@drawable/ss"
                       android:hint="意大利炮"
                       android:layout_width="380dp"
                       android:layout_centerHorizontal="true"
                       android:background="@drawable/find_style"
                       android:layout_marginTop="50dp"
                       android:layout_height="30dp"/>


               </RelativeLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="262dp"
                   android:layout_marginTop="180dp"
                   android:background="#ffffff"
                   android:gravity="center"
                   >

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginTop="21dp"
                        android:id="@+id/classfig_rec"
                        android:layout_width="370dp"
                        android:layout_height="150dp"
                        />


               </LinearLayout>

               <com.youth.banner.Banner
                   android:layout_centerHorizontal="true"
                   android:id="@+id/goods_ban"
                   android:layout_width="370dp"
                   android:layout_height="150dp"
                   android:layout_marginTop="93dp"
                   />

           </RelativeLayout>


           <LinearLayout
               android:background="#A5A5A5"
               android:layout_width="match_parent"
               android:layout_height="449dp"
               android:orientation="vertical"
               >




           </LinearLayout>


           <LinearLayout
               android:background="#505050"
               android:layout_width="match_parent"
               android:layout_height="930dp"
               android:orientation="vertical"
               >


               <com.flyco.tablayout.CommonTabLayout
                   android:id="@+id/goods_tab"
                   android:layout_width="match_parent"
                   android:layout_height="70dp"
                   android:background="#ffffff"
                   app:tl_textSelectColor="#FF0000"
                   app:tl_textUnselectColor="#000000"
                   android:layout_marginBottom="10dp"/>

               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/goods_list"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   />

           </LinearLayout>



       </LinearLayout>




   </ScrollView>

</LinearLayout>